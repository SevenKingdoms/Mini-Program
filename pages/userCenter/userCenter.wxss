.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 100rpx;
    box-sizing: border-box;
}

.userinfo .image {
    width: 200rpx;
    height: 200rpx;
    border: 2rpx solid #45c7c9;
    border-radius:50%;
}

.userinfo .information {
    display: flex;
    margin-top: 100rpx;
    margin-left: 75rpx;
    flex-direction: column;
    align-items: flex-start;
    font-size: smaller;
}