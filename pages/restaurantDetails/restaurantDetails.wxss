.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    align-content: space-between;
    padding: 50rpx 0;
    box-sizing: border-box;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20rpx;
}

.userinfo-image {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-name {
    /* color: #aaa; */
    font-weight: 900;
    font-size: larger;
}

.userinfo-address {
    font-size: x-small;
}

.announcement {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 100rpx;
}

.onsales {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 100rpx;
}

.enterDishes {
    text-align: right;
    margin-top: 200rpx;
}

