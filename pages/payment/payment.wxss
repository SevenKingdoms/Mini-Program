/* pages/payment/payment.wxss */
page{
  background-color: #F7F7F7;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.top-view{
  margin-top: 15rpx;
}

.parent-view {
  display: flex;
  position: relative;
  align-items: center;
  height: 80rpx;
  width: 100%;
  background-color: white;
}

.fix-text {
  text-align: right;
  width: 180rpx;
  font-family: Arial;
  color: #101010;
  font-size: 14px;
  vertical-align: middle;
  line-height: 80rpx;
}

.input-text {
  position: relative;
  width: 570rpx;
  margin-left: 26rpx;
  line-height: 20px;
  font-size: 14px;
  font-family: Arial, Helvetica, sans-serif;
}

.orderDetail {
  text-align: left;
  padding-left: 50rpx;
  height: 90rpx;
  vertical-align: middle;
  line-height: 90rpx;
  font-size: 14px;
  color: #757575;
  font-family: Arial, Helvetica, sans-serif;
}

.orderList{
  box-sizing: border-box;
  margin-bottom: 350rpx;
  height: 100%;
  width: 100%;
  background-color: white;
}

.remark {
  padding: 24rpx 40rpx 10rpx 40rpx; 
  height: 180rpx;
  font-size: 14px;
  width: 100%
}

.foodList{
  background-color: #F7F7F7;
  width: 728rpx;
  height: 120rpx;
  margin: auto;
  margin-bottom: 5rpx;
}

.foodImage{
  position: absolute;
  margin: 18rpx auto 18rpx 32rpx;
  height: 84rpx;
  width: 84rpx;
}

.foodName{
  width: 200rpx;
  height: 46rpx;
  font-size: 70%;
  color: #101010;
  position: absolute;
  margin: 18rpx auto auto 135rpx;
}

.price {
  width: 100rpx;
  height: 46rpx;
  font-size: 70%;
  position: absolute;
  margin: 18rpx auto auto 600rpx;
}

.quantity{
  position: absolute;
  margin: 64rpx auto auto 135rpx;
  width: 100rpx;
  height: 46rpx;
  font-size: 70%;
}

.totalPrice {
  display: flex;
  flex-direction: row;
  height: 96rpx;
  line-height: 96rpx;
  vertical-align: middle;
}

.sumText {
  width: 200rpx;
  margin-left: 60rpx;
  font-size: 80%;
  color: #101010;
}

.money{
  width: 100rpx;
  margin-left: 350rpx;
  font-size: 80%;
  color: #101010;
}

.payButton{
  width: 100%;
  height: 96rpx;
  bottom: 0;
  position: fixed;

}