.top-tab{
  /* width: 750rpx; */
  width: 100%;
  height: 100rpx;
  background: white;
  color: #545454;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  position:fixed;
  z-index:999;
  top:0;
  left: 0;
  right: 0;
}

.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.flex-item{
  flex-grow: 1;
  text-align: center;
}

.toptab{
  border-bottom: solid 3px transparent;
  transition: all 0.4s ease-in-out;
  -moz-transition: all 0.4s  ease-in-out; /* Firefox 4 */
  -webkit-transition: all 0.4s ease-in-out; /* Safari 和 Chrome */
  -o-transition: all 0.4s  ease-in-out; /* Opera */
}

.toptab.active{
  font-weight: bold;
  color: #45c7c9;
  border-bottom: solid 3px #45c7c9;
}

.tab_con{ 
  margin-top: 100rpx;
  height: 100%;
  position: relative;
  width: 300%;
  left: 0;
  transition: all 0.4s ease-in-out;
  -moz-transition: all 0.4s  ease-in-out; /* Firefox 4 */
  -webkit-transition: all 0.4s ease-in-out; /* Safari 和 Chrome */
  -o-transition: all 0.4s  ease-in-out; /* Opera */
}

